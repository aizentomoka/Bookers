<h1>Editing Book</h1>

<div>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

</div>

<%= form_with model: @book do |f| %>



 <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  
<% end %>

<a class="show" href="/books/<%= @book.id %>">Show</a>
<a class="back" href="/books">Back</a>

